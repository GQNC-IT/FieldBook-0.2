<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@color/light_green"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fieldbook.MainActivity$PlaceholderFragment"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/irriLogo"
        android:layout_gravity="left"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="70dp"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/irri_logo"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/label_fielbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="110dp"
        android:text="@string/label_fieldbook"
        android:textSize="18sp" />

     <!--  
    <TextView
        android:id="@+id/label_username"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_username" />
     -->
     <EditText 
        android:id="@+id/edit_username"
        android:background="#ffffff"
        android:layout_marginTop="160dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="@string/label_username" />
<!-- 
     <TextView
         android:id="@+id/label_password"
         android:layout_gravity="left"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/label_password" />
     -->

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="@string/label_password"
        android:inputType="textPassword" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="260dp"
        android:background="@color/dark_green"
        android:onClick="submitLogin"
        android:paddingRight="20dp"
        android:text="@string/button_submit_login"
        android:textSize="13sp" />

    <Button
        android:id="@+id/link_to_signup"
        android:layout_marginLeft="43dp"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="@color/light_green"
        android:gravity="bottom|left"
        android:onClick="submitSignup"
        android:text="@string/button_submit_signup_data"
        android:textSize="12sp" />

</FrameLayout>
